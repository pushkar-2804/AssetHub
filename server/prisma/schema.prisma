generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int         @id @default(autoincrement())
  email     String      @unique
  password  String
  name      String?
  assets    Asset[]
  wallet    Wallet?
  walletId  Int?
  cart      Cart?
  purchases Purchases[]
}

model Wallet {
  id            Int    @id @default(autoincrement())
  walletAddress String?
  walletCredential String
  user          User   @relation(fields: [userId], references: [id])
  userId        Int    @unique
}

enum Category{
  GADGET
  DEAL
  SOFTWARE
}

model Asset {
  assetId     Int        @id @default(autoincrement())
  assetName   String
  description String
  price       Int
  category    Category
  images      String[]
  user        User       @relation(fields: [userId], references: [id])
  userId      Int
  cartItems   CartItem[]
}

model Cart {
  id         Int         @id @default(autoincrement())
  user       User        @relation(fields: [userId], references: [id])
  userId     Int         @unique
  cartItems  CartItem[]
  totalPrice Int  
}

model CartItem {
  id      Int   @id @default(autoincrement())
  cart    Cart  @relation(fields: [cartId], references: [id])
  cartId  Int
  asset   Asset @relation(fields: [assetId], references: [assetId])
  assetId Int
  quantity Int @default(1)
}

model Purchases {
  id            Int      @id @default(autoincrement())
  user          User     @relation(fields: [userId], references: [id])
  userId        Int
  assetId       Int
  sellerId      Int
  txId String      @unique
  transactionId Int
  date          DateTime
}
